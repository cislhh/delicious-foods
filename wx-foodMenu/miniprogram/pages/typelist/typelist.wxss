.img {
  width: 100%;
  height: 160px;
}

.search {
  width: 100%;
  height: 40px;
  /* background: rgb(244,96,56); */
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 15px;
}

.search_view {
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 70%;
  height: 35px;
  /* border: 1px solid  #ff0; */
  border-radius: 20px;
  background: #fff;
}

.search input {
  width: 82%;
  height: 38px;
  /* border: 1px solid  #ccc; */
}

.search text {
  color: #f00;
  margin-left:10rpx;
}

.hot-recipe {
  position: relative;
  background: #fff;
  margin-top: 5px;
}

